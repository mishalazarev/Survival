<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wrapper_main_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wrapper_describe_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/cell_recipe_item">

        <TextView
            android:id="@+id/recipe_item_text_view"
            android:background="@drawable/recipe_item_wooden_sword"
            android:textColor="@color/black"
            android:gravity="bottom|right"
            android:paddingBottom="5dp"
            android:paddingEnd="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/name_recipe_item_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/name_recipe_item_text_view"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:lines="2"
            android:text="@string/wooden_sword_recipe_item"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/create_recipe_item_button"
            app:layout_constraintStart_toEndOf="@+id/name_recipe_item_text_view"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow>

                <TextView
                    android:id="@+id/caption_main_text_view"
                    android:textStyle="italic"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:lines="2"
                    android:text="@string/damage"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:textStyle="italic"
                    android:layout_gravity="center"
                    android:text="0"
                    android:id="@+id/main_text_view"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/caption_second_text_view"
                    android:textStyle="italic"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:lines="2"
                    android:text="@string/weapon_effect"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:gravity="center"
                    android:textStyle="italic"
                    android:lines="2"
                    android:id="@+id/second_text_text_view"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/create_recipe_item_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/bottom_dialog_fragment"
            android:text="@string/create_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/cell_recipe_item"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/caption_recipe_item"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/wrapper_recipe_item_linear_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/wrapper_recipe_item_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>