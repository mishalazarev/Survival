<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wrapper_item_constraint_layout"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_margin="2dp"
    android:background="@drawable/animate_cell_item">

    <ImageView
        android:background="@drawable/border_for_item"
        android:id="@+id/item_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/item_wood" />

    <TextView
        android:id="@+id/count_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/count_item"
        android:textColor="#E3DFDF"
        android:textSize="10sp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SmallSp"
        android:layout_margin="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>