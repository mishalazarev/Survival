<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/process_dialog_fragment"
    android:padding="20dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/caption_process_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aguafina_script"
        android:text="@string/caption_download"
        android:textColor="@color/light_gray"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:progressDrawable="@drawable/process_progress_bar"
        android:id="@+id/player_health_indicator_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />


</LinearLayout>

